{
    "name": "Drupal Commerce",
    "implies": "Drupal",
    "website": "http://drupalcommerce.org",
    "matches": [
        {
            "regexp": "<[^>]+(?:id=\"block[_-]commerce[_-]cart[_-]cart|class=\"commerce[_-]product[_-]field)"
        },
        {
            "search": "script",
            "certainty": 50,
            "regexp": "/modules/(?:contrib/)?commerce/js/conditions\\.js"
        },
        {
            "search": "script",
            "certainty": 50,
            "regexp": "/profiles/commerce_kickstart/modules/contrib/commerce/modules/checkout/commerce_checkout\\.js"
        },
        {
            "search": "script",
            "certainty": 50,
            "regexp": "/sites/(?:all|default)/modules/(?:contrib/)?commerce/modules/checkout/commerce_checkout\\.js"
        }
    ]
}