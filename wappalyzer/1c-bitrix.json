{
    "name": "1C-Bitrix",
    "website": "http://www.1c-bitrix.ru",
    "implies": "PHP",
    "matches": [
        {
            "search": "script",
            "regexp": "bitrix(?:\\.info/|/js/main/core)"
        },
        {
            "search": "cookies[BITRIX_SM_SALE_UID]",
            "regexp": ".*"
        },
        {
            "search": "cookies[BITRIX_SM_LAST_IP]",
            "regexp": ".*"
        },
        {
            "search": "cookies[BITRIX_SM_GUEST_ID]",
            "regexp": ".*"
        },
        {
            "search": "headers[set-cookie]",
            "regexp": "BITRIX_"
        },
        {
            "search": "headers[x-powered-cms]",
            "regexp": "Bitrix Site Manager"
        }
    ]
}